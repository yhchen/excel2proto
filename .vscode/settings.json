{
    "files.watcherExclude": {
        "**/.git/**/*": true,
        "**/.git/objects/**": false,
        "**/.git/subtree-cache/**": false,
        "**/dist/**/*": true,
        "**/node_modules/**/*": true,
        "**/node_modules/*/**": false
    },
    "search.exclude": {
        "**/dist": true
    },
    "editor.insertSpaces": false,
    "files.exclude": {
        "**/*.js.map": true,
        "node_modules": true,
        "package-lock.json": true
    },
    "editor.snippetSuggestions": "bottom",
    "javascript.format.semicolons": "insert",
    "typescript.format.semicolons": "insert"
}